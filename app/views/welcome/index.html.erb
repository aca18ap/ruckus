<%= javascript_pack_tag 'welcome' =%>
<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signUpModalLabel">You're almost done creating your account!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            
            
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div id="logo-homepage" class="col-lg-5 p-0">
        <span id="slogan">
            <h1 >Quality doesn't have</h1>
            <h1 >to be expensive</h1>
        
        </span>
            <%= image_tag('walking.jpg', class: "w-100")%>
        </div>
        <div class="col-lg-7 p-0">
            <img src="ruckus_logo.png" alt="" class="w-100" id="homepage_logo">
            <div id="sign_me_up" class=" d-flex justify-content-center">
                <div class="d-flex flex-column">
                    <span>
                        <p class="text-center" id="sign_me_up_caption">
                            Exciting second hand branded clothes reselling coming to the UK
                        </p>
                        <p class="text-center">Coming end of 2022 ....</p>
                    </span>
                    
                    <div class="d-flex justify-content-center">
                        <input class="input" placeholder= "Email">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signUpModal">Sign me up!</button>
                    </div>
                
                </div>
            </div>
            <div class="d-flex justify-content-around" id="logos">
                <%= image_tag('the-north-face-logo.png', width: '10%') %>
                <%= image_tag('berghaus.svg', width: '10%') %>
                <%= image_tag('Adidas_Logo.svg.png', width: '10%') %>
            </div>
        </div>
    </div>

</div>



<div class="container-fluid g-0" id="backgrounds_container">
    <div class="w-100 d-flex justify-content-center" id="logo">
        <div class="logo_wrapper d-flex "  id="logo_img">
            <a href="/"><img src="ruckus_logo.png" class="logo_img"></a>
            <ul class="nav flex-column transparent-background" id="nav-menu-logo">
                <li class="nav-item">
                    <%= link_to 'About us', about_path, :class=>'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'FAQs', faq_path, :class=>'nav-link' %>

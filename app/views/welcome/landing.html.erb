<%= javascript_pack_tag 'welcome' =%>
<div class="container-fluid g-0" id="welcome_page">
<!-- Button trigger modal -->

<!-- Modal -->

    <div class="row">
        <div id="slogan_banner" class="col-lg-5 col-sm-12 p-0">
            <span id="slogan" class="w-100">
                <h1 >Quality doesn't have to cost</h1>
            
            </span>
            <%= image_tag('walking.jpg', class: "w-100 homepage_img")%>
        </div>
        <div class="col-lg-7 col-sm-12 p-0 shadow-lg bg-ruckus" id="logo_cta">
            <ul class="nav navbar flex-column z-100" id="nav-menu">
                <li class="nav-item">
                    <%= link_to 'About us', about_path, :class=>'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'FAQs', faq_path, :class=>'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Contacts', contacts_path, :class=>'nav-link' %>
                </li>
            </ul>
            <div class="d-flex flex-wrap h-100 w-100" id="welcome_content">
                <div class="d-flex justify-content-center w-100 pt-5">
                    <%= image_tag('ruckus_no_bg.png', width: '50%')%>
                </div>
                <div id="sign_me_up" class="p-5 w-100 d-flex justify-content-center">
                    <div class="d-flex flex-column">
                        <p class="text-center" id="sign_me_up_caption">
                            Exciting second hand branded clothes reselling coming to the UK
                        </p>
                        <p class="text-center">Coming end of 2022 ....</p>
                        
                        <div class="d-flex justify-content-center">
                        <%= link_to 'Sign up', '#',  {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#signUpModal', class: 'btn btn-success'}  %>                    </div>
                                
                    </div>
                </div>
                <div class="d-flex justify-content-around pb-1" id="logos">
                    <%= image_tag('the-north-face-logo.png', width: '10%') %>
                    <%= image_tag('berghaus.svg', width: '10%') %>
                    <%= image_tag('Adidas_Logo.svg.png', width: '10%') %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="signUpModal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
           <%= render 'sign_up_modal' %>
        </div>
    </div>
</div>


<script>
    document.body.style.overflow= "hidden";
</script>
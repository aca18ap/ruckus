<div id="carouselExampleControls" class="carousel slide transparent-background" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag('carousel_images/clothes_1.png', width: '100%', height: '50%', class: 'd-block') %>
      <%# <img src="app/assets/images/carousel_images/clothes_1.png" class="d-block w-100" alt="..."> %>
    </div>
    <div class="carousel-item">
      <%= image_tag('carousel_images/clothes_2.png', width: '100%', height: '50%', class: 'd-block') %>
    </div>
    <div class="carousel-item">
      <%= image_tag('carousel_images/clothes_3.png', width: '100%', height: '50%', class: 'd-block') %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>